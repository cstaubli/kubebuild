#cloud-config
# https://www.upcloud.com/support/deploy-kubernetes-coreos/
# https://andrewmichaelsmith.com/2016/05/my-kubernetes-setup/

ssh_authorized_keys:
 - ssh-rsa  christian.staubli@gmail.com

hostname: kube-worker-1-worker

write_files:
  - path: /etc/systemd/journald.conf
    permissions: 0644
    content: |
      [Journal]
      SystemMaxUse=50M
      RuntimeMaxUse=50M
  - path: /etc/flannel/options.env
    permissions: '0644'
    content: |
      FLANNELD_IFACE=192.168.20.201
      FLANNELD_ETCD_ENDPOINTS=http://10.3.0.11:2379,http://10.3.0.12:2379,http://10.3.0.1:2379
  - path: /etc/kubernetes/manifests/kube-proxy.yaml
    permissions: '0644'
    content: |
      apiVersion: v1
      kind: Pod
      metadata:
        name: kube-proxy
        namespace: kube-system
      spec:
        hostNetwork: true
        containers:
        - name: kube-proxy
          image: gcr.io/google_containers/hyperkube-amd64:v1.6.2 
          command:
          - /hyperkube
          - proxy
          - --master=http://192.168.20.200:8080
          - --proxy-mode=iptables
          - --conntrack-max=0
          securityContext:
            privileged: true
          volumeMounts:
          - mountPath: /etc/ssl/certs
            name: ssl-certs-host
            readOnly: true
        volumes:
        - hostPath:
            path: /usr/share/ca-certificates
          name: ssl-certs-host

coreos:
  update:
    reboot-straegy: etcd-lock
  units:
    - name: public.network
      content: |
        [Match]
        MACAddress=52:54:00:8c:aa:61

        [Network]
        Address=192.168.20.201/24
        Gateway=192.168.20.1
        DNS=8.8.8.8
    - name: service.network
      content: |
        [Match]
        MACAddress=52:54:00:8a:90:11

        [Network]
        Address=10.3.0.11/24
    - name: pod.network
      content: |
        [Match]
        MACAddress=52:54:00:ea:30:d1

        [Network]
        Address=10.2.0.11/16
    - name: etcd2.service
      command: start
      drop-ins:
        - name: 10-override-name.conf
          content: |
            [Service]
            Environment=ETCD_NAME=%H
    - name: flanneld.service
      command: start
      drop-ins:
        - name: 40-ExecStartPre-symlink.conf
          content: |
            [Service]
            ExecStartPre=/usr/bin/ln -sf /etc/flannel/options.env /run/flannel/options.env
        - name: 50-network-config.conf
          content: |
            [Unit]
            Requires=etcd2.service

            [Service]
            ExecStartPre=/usr/bin/etcdctl set /coreos.com/network/config '{ "Network": "10.2.0.0/16" }'
    - name: docker.service
      command: start
      drop-ins:
        - name: 50-opts.conf
          content: |
            [Service]
            Requires=flanneld.service
            After=flanneld.service

    - name: docker-tcp.socket
      command: start
      enable: yes
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        BindIPv6Only=both
        Service=docker.service

        [Install]
        WantedBy=sockets.target

    - name: kubelet.service
      command: start
      content: |
        [Service]
        ExecStartPre=/usr/bin/mkdir -p /etc/kubernetes/manifests

        Environment=KUBELET_IMAGE_TAG=v1.6.1_coreos.0 
        ExecStart=/usr/lib/coreos/kubelet-wrapper \
        --api-servers=http://192.168.20.200:8080 \
        --register-node=true \
        --allow-privileged=true \
        --config=/etc/kubernetes/manifests \
        --hostname-override=192.168.20.201 \
        --cluster-dns=10.3.0.10 \
        --cluster-domain=cluster.local \
        Restart=always
        RestartSec=10
        [Install]
        WantedBy=multi-user.target

  update:
    group: alpha
    reboot-strategy: off

  etcd2:
    discovery: "https://discovery.etcd.io/6f17cca769bad7e86081ddc818d324bc"
    advertise-client-urls: "http://10.3.0.11:2379"
    initial-advertise-peer-urls: "http://10.3.0.11:2380"
    listen-client-urls: "http://0.0.0.0:2379,http://0.0.0.0:4001"
    listen-peer-urls: "http://10.3.0.11:2380,http://10.3.0.11:7001"
    data-dir: /var/lib/etcd2

